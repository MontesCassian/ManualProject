                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    <script src="/Scripts/app/tutorialsApp.js"></script>
    <script src="/Scripts/common/myDirectives.js"></script>
    <script src="~/Scripts/controllers/sidebarController.js"></script>
    <script src="~/Scripts/controllers/editorController.js"></script>
    <script src="~/Scripts/controllers/tutorialController.js"></script>
    <script src="~/Scripts/controllers/headerController.js"></script>
    <script src="~/Scripts/controllers/testController.js"></script>
    <script src="~/Scripts/common/myServices.js"></script>
</body>
</html>
